unit UClaAPIRest;

interface

uses
  System.SysUtils, System.Classes, IPPeerClient, REST.Client,
  Data.Bind.Components, Data.Bind.ObjectScope;

type
  TDMClaAPIRest = class(TDataModule)
    RESTClient1: TRESTClient;
    RESTRequest1: TRESTRequest;
    RESTResponse1: TRESTResponse;
  private
    { Private declarations }
    sJSON : String;
    procedure fPesquisaCEPAPI(wsCEP: String);
  public
    { Public declarations }
    function fPesquisaCEP(wsCEP: String) : String;
  end;

var
  DMClaAPIRest: TDMClaAPIRest;

Const cURL   = 'viacep.com.br/ws/_numero_CEP/json/';
      cURLP1 = 'viacep.com.br/ws/';
      cURLP2 = '/json/';

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

{ TDMClaAPIRest }

function TDMClaAPIRest.fPesquisaCEP(wsCEP: String): String;
begin
  Result := fPesquisaCEPAPI(wsCEP);
end;

procedure TDMClaAPIRest.fPesquisaCEPAPI(wsCEP: String);
begin
  RESTClient1.BaseURL := cURLP1+wsCEP+cURLP2;
  RESTRequest1.Execute;
  sJSON := RESTRequest1.Response.JSONValue.ToString;
end;

end.
